{
  "name": "sirius-webdaw",
  "version": "1.0.0",
  "description": "Honours project done by Kaleb Tesfay under supervision by Dr. Lou Nel",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:lint": "stylelint src/scss/*.scss --syntax scss",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "build:js": "webpack --mode=production",
    "build:html": "posthtml -c posthtml.json",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "build": "run-s build:*",
    "serve": "browser-sync start --server \".\" --files \".\"",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "watch": "run-p serve watch:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kalebtesfay/honours-project.git"
  },
  "author": "Kaleb Tesfay",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kalebtesfay/honours-project/issues"
  },
  "homepage": "https://github.com/kalebtesfay/honours-project#readme",
  "dependencies": {
    "autoprefixer": "^10.2.5",
    "htmlnano": "^1.0.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "tone": "^14.7.77"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "eslint": "^7.24.0",
    "eslint-loader": "^4.0.2",
    "gulp-htmlnano": "^0.1.0",
    "postcss": "^8.2.12",
    "postcss-cli": "^8.3.1",
    "posthtml": "^0.15.2",
    "posthtml-include": "^1.7.0",
    "posthtml-modules": "^0.7.4",
    "webpack": "^5.35.0",
    "webpack-cli": "^4.6.0"
  }
}
